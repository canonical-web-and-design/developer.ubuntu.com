{
  "devDependencies": {
    "docs-vanilla-theme": "1.1.0",
    "node-sass": "4.5.2",
    "sass-lint": "1.10.2"
  },
  "scripts": {
    "watch": "node-sass --include-path node_modules --watch --source-map true --recursive static/sass/global.scss static/css/global.css",
    "clean": "rm -rf node_modules yarn-error.log",
    "build": "node-sass --include-path node_modules static/sass --output static/css",
    "test": "sass-lint static/**/*.scss --verbose --no-exit"
  }
}
